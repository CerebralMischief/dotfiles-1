[color]
    ui = auto

[alias]
    # Config
    ec = config --global -e

    # Log
    st = status
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset %Cgreen%cd%Creset' --abbrev-commit
    lgbr = !git lg --no-merges master..
    standup = log --since yesterday --oneline --author thomas
    mine = lg --author $(whoami) --oneline

    # Move around
    br = branch
    co = checkout

    # Review changes
    dc = diff --cached
    changedfiles = diff origin/master.. --stat
    brdiff = diff origin/master..
    shallipush = log origin/master..master --stat --pretty=format:'%Cred%h%Creset - %s %Cgreen(%cr)' --abbrev-commit

    # Commit
    ci = commit
    wip = !git add -u && git commit -m "[WIP]"
    showfile = diff-tree --no-commit-id --name-only -r

[core]
    editor = vim
    autocrlf = false

[push]
    default = current

[http]
    sslVerify = false
